<h1>Recipes</h1>
<h2>Here are the search results for: <%= @search %></h2>

<table border="1">
	<% @recipes.each do|recipe|%>
		<tr>
			<td><%= link_to(image_tag(recipe["image_url"], width:"100", height:"100"), recipe["source_url"]) %>
			<td><%= link_to(sanitize(recipe["title"]), recipe["source_url"])%></td>
			<td><%= recipe["social_rank"]%></td>
		</tr>
	<% end %>
</table>
